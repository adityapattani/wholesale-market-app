<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp"
    android:background="@color/cardview_dark_background">

    <TextView
        android:id="@+id/commodity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:text="Apple"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:paddingVertical="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/commodity_high_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HP: $2"
        android:layout_marginEnd="16dp"
        android:paddingVertical="16dp"
        android:textColor="#F44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/commodity_name" />

    <TextView
        android:id="@+id/commodity_low_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LP: $1"
        android:layout_marginEnd="16dp"
        android:paddingVertical="16dp"
        android:textColor="#4CAF50"
        app:layout_constraintEnd_toStartOf="@id/commodity_high_price"
        app:layout_constraintTop_toTopOf="@id/commodity_name" />

</androidx.constraintlayout.widget.ConstraintLayout>